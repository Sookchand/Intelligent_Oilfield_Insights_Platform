# Database Configuration
# For local development (outside Docker), use localhost:5433
# For Docker containers, use postgres:5432
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=oilfield_production
POSTGRES_USER=oilfield_user
POSTGRES_PASSWORD=oilfield_pass

# Neo4j Configuration
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=oilfield_neo4j_pass

# Qdrant Vector Database
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# MinIO Object Storage
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minio_admin
MINIO_SECRET_KEY=minio_admin_pass
MINIO_BUCKET=hse-reports
MINIO_USE_SSL=false

# OpenAI API
OPENAI_API_KEY=sk-your-api-key-here

# Application Settings
LOG_LEVEL=INFO
ENVIRONMENT=development
API_VERSION=v1

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

